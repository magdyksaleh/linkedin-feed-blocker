{
  "manifest_version": 2,
  "name": "LinkedIn Feed Blocker",
  "version": "1.0",
  "description": "Blocks the LinkedIn feed while keeping other functionality intact",
  
  "permissions": [
    "*://*.linkedin.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
